<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/proxyIPEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/enter_ip"
            android:inputType="number|numberDecimal"
            android:digits="0123456789."
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/proxyPortEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/enter_proxy_port"
            android:inputType="number"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/proxyUserNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/enter_proxy_login"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/proxyPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/enter_proxy_password"
            android:inputType="text"
            android:minHeight="48dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>